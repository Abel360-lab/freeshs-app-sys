# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-railway-domain.railway.app

# Database (Railway will provide DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:port/database

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Notification API
NOTIFICATION_API_URL=https://your-notification-api.com
NOTIFICATION_API_KEY=your-api-key
NOTIFICATION_TIMEOUT=30

# SMS Settings
SMS_PROVIDER=your-sms-provider
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=your-sender-id

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://your-railway-domain.railway.app